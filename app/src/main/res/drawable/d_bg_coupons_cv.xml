<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- White Background (Full Card) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White Color -->
            <corners android:radius="20dp"/> <!-- CardView Corner Radius -->
            <stroke android:width="1dp" android:color="#13775B"/>
        </shape>
    </item>



    <!-- Green Left Section (20% width) -->
    <item android:width="60dp" android:gravity="start">
        <shape android:shape="rectangle">
            <solid android:color="#13775B"/> <!-- Green Color -->
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp"/>
        </shape>
    </item>
</layer-list>