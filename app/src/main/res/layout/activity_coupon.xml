<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:background="@color/pink">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/gift_png" />

        <LinearLayout
            android:id="@+id/applyCouponLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:background="@drawable/d_bg_coupons"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
                <TextView
                    android:id="@+id/tv_applyCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPLY COUPON"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold" />

            </LinearLayout>



            <TextView
                android:id="@+id/tv_applyCouponSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </FrameLayout>


    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/ll_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="4dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/edit"
            android:rotation="180"
            android:src="@drawable/right_arrow"
            app:tint="@color/pink"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupons"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bestCoupons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/_12sdp"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"/>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bestCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/tv_moreCoupons"

                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_moreCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_12sdp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
