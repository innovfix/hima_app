<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.PaymentActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_12sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right_arrow"
            android:rotation="180"
            android:contentDescription="@string/edit"
            app:tint="@color/pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="@color/pink"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Card with coins & price -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:backgroundTint="#F5F5F5"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_12sdp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_CoinsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200 Coins"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold" />

                <TextView
                    android:id="@+id/tv_totalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="₹499.0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_savePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save 30%"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Final Amount -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:backgroundTint="@color/purple"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Amount"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/tv_finalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="₹499.0"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Enter Coupon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:text="Enter Coupon Code"
        android:visibility="gone"
        android:textColor="#4B164C"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_semibold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/d_bg_coupon_edittext_selected"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_percent_24"
                android:background="@drawable/d_pink_rounded_circle"
                android:padding="@dimen/_1sdp" />

            <EditText
                android:id="@+id/et_couponCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter Coupon Code"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent"
                android:textCursorDrawable="@drawable/color_cursor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyCoupon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:text="Apply" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- View all coupons -->
    <LinearLayout
        android:id="@+id/ll_allCoupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_allCoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all coupons"
            android:textColor="@color/pink"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_semibold" />

        <ImageView
            android:id="@+id/iv_allCoupons"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:background="@drawable/d_pink_rounded_circle"
            android:padding="@dimen/_1sdp" />
    </LinearLayout>

    <!-- Pay Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:text="Pay"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/pink"
        app:cornerRadius="@dimen/_18sdp" />

</LinearLayout>
